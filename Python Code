###Lab assignment 4th
##a) Generate a 4x4 identity matrix
import numpy as np
identity_matrix = np.identity(4)
print("4x4 Identity Matrix:")
print(identity_matrix)


##b) Generate two 3x3 matrices with random integers and perform addition/multiplication
import numpy as np
# Generate two 3x3 matrices with random integers (1 to 9)
matrix1 = np.random.randint(1, 10, size=(3, 3))
matrix2 = np.random.randint(1, 10, size=(3, 3))
print("Matrix 1:")
print(matrix1)
print("\nMatrix 2:")
print(matrix2)
# Perform matrix addition
matrix_sum = matrix1 + matrix2
print("\nMatrix Addition (Matrix 1 + Matrix 2):")
print(matrix_sum)
# Perform matrix multiplication
matrix_product = np.dot(matrix1, matrix2) # or matrix1 @ matrix2
print("\nMatrix Multiplication (Matrix 1 * Matrix 2):")
print(matrix_product)


##c) Multiply a 5x3 matrix by a 3x2 matrix with user input
import numpy as np
# Function to get matrix input from user
def get_matrix_input(rows, cols, matrix_name):
    print(f"\nEnter elements for {matrix_name} ({rows}x{cols}):")
    elements = []
    for i in range(rows):
        while True:
            try:
                row_str = input(f"Enter {cols} elements for row {i+1} (space-separated): ")
                row_elements = list(map(int, row_str.split()))
                if len(row_elements) == cols:
                    elements.extend(row_elements)
                    break
                else:
                    print(f"Please enter exactly {cols} elements.")
            except ValueError:
                print("Invalid input. Please enter integers only.")
    return np.array(elements).reshape(rows, cols)
# Get input for 5x3 matrix
matrix_A = get_matrix_input(5, 3, "Matrix A (5x3)")
# Get input for 3x2 matrix
matrix_B = get_matrix_input(3, 2, "Matrix B (3x2)")
print("\nMatrix A:")
print(matrix_A)
print("\nMatrix B:")
print(matrix_B)
# Perform matrix multiplication
# The number of columns in matrix A must be equal to the number of rows in matrix B
if matrix_A.shape[1] == matrix_B.shape[0]:
    product_matrix = np.dot(matrix_A, matrix_B)
    print("\nProduct Matrix (Matrix A * Matrix B):")
    print(product_matrix)
else:
    print("\nError: Cannot multiply matrices. Number of columns in Matrix A must be equal to number of rows in Matrix B.")
